<div class="col-lg-2 sidebar d-none d-lg-block">
  <ul class="sidebar-items">
    <li class="sidebar-item <%= path === 'profileId' ? 'active' : '' %>">
      <a href="/<%= user.profileId %> ">
        <span><i class="fas fa-home"></i></span>
        <span>My profile</span>
      </a>
    </li>
    <li class="sidebar-item <%= path === 'friends' ? 'active' : '' %>">
			<a href="/friends/your-friends">
				<div class="d-flex justify-content-between">
					<div class="me-auto">
						<span><i class="fas fa-user-alt"></i></span>
        		<span>Friends</span>
					</div>	
					
					<span <%= requestsCounter == 0 ? "hidden" : "" %> class="counter text-center"><%= requestsCounter %></span>
				</div>
      </a>
    </li>
  </ul>
</div>
